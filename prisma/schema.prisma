generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model admins {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  password String
}

model users {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  email    String    @unique
  password String
  username String    @unique
  name     String
  courses  courses[]
}

model courses {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  imageLink   String
  price       Int
  time        String
  level       String
  heading     String
  description String
  category    String
  instructor  String
  user        users?  @relation(fields: [usersId], references: [id])
  usersId     String? @db.ObjectId
}
